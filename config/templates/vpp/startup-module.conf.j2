# VPP Module Startup Configuration
# Module: {{ module.name }} - {{ module.display_name }}
# Generated by configure-router.py

unix {
  cli-listen {{ module.socket_path }}
  exec /etc/vpp/commands-{{ module.name }}.txt
  nodaemon
  log /var/log/vpp/vpp-{{ module.name }}.log
}

cpu {
{% if module.main_core %}
  main-core {{ module.main_core }}
{% endif %}
{% if module.worker_cores %}
  corelist-workers {{ module.worker_cores }}
{% endif %}
}

plugins {
  path /usr/lib/x86_64-linux-gnu/vpp_plugins
{% for p in module.disable_plugins %}
  plugin {{ p }} { disable }
{% endfor %}
}

logging {
  default-log-level info
  default-syslog-log-level info
}
